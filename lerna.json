{
  "version": "0.3.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "command": {
    "init": {
      "exact": true
    },
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "createRelease": "github",
      "exact": true,
      "message": "chore(release): publish %s",
      "yes": true,
      "ignoreChanges": [
        "**/node_modules/**",
        "**/*.md",
        "**/__tests__/**",
        "**/*.test.{ts?(x),js?(x)}"
      ]
    }
  }
}
