{
	"private": true,
	"name": "monorepo-stack",
	"version": "0.0.0",
	"description": "My opinionated stack to ease project building",
	"author": {
		"name": "Ayoub Adib",
		"email": "adbayb@gmail.com",
		"url": "https://twitter.com/adbayb"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:adbayb/stack.git"
	},
	"license": "MIT",
	"scripts": {
		"prepare": "husky install ./scripts/hooks && pnpm build",
		"clean": "scripts clean",
		"check": "scripts check",
		"fix": "scripts fix",
		"start": "turbo run start",
		"build": "turbo run build"
	},
	"devDependencies": {
		"@adbayb/eslint-config": "workspace:*",
		"@adbayb/prettier-config": "workspace:*",
		"@adbayb/scripts": "workspace:*",
		"@adbayb/ts-config": "workspace:*",
		"@commitlint/cli": "17.5.1",
		"@commitlint/config-conventional": "17.4.4",
		"@types/node": "18.15.11",
		"eslint": "8.38.0",
		"husky": "8.0.3",
		"lint-staged": "13.2.1",
		"prettier": "2.8.7",
		"turbo": "1.8.8",
		"typescript": "5.0.4"
	},
	"prettier": "@adbayb/prettier-config",
	"eslintConfig": {
		"extends": "@adbayb"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx,cjs,mjs,cts,mts}": [
			"pnpm check"
		],
		"**/*.{json,md,mdx,html,css,yaml,yml}": [
			"pnpm fix"
		]
	},
	"packageManager": "pnpm@8.1.1",
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	}
}
