{
	"private": true,
	"workspaces": [
		"packages/*",
		"packages/scripts/example"
	],
	"scripts": {
		"postinstall": "lerna run prepublishOnly",
		"check:format": "prettier . --ignore-path .gitignore",
		"check:lint": "eslint . --ignore-path .gitignore",
		"check:types": "tsc --noEmit",
		"format": "npm run check:format -- --write",
		"lint": "npm run check:lint -- --fix",
		"changed": "lerna changed --all",
		"release": "lerna publish"
	},
	"author": {
		"name": "Ayoub Adib",
		"email": "adbayb@gmail.com",
		"url": "https://twitter.com/adbayb"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:adbayb/create.git"
	},
	"license": "MIT",
	"prettier": "@adbayb/prettier-config",
	"eslintConfig": {
		"extends": "@adbayb"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx}": [
			"npm run lint"
		],
		"**/*.{json,md,mdx,html,css}": [
			"npm run format"
		]
	},
	"devDependencies": {
		"@adbayb/eslint-config": "0.7.0",
		"@adbayb/prettier-config": "0.7.0",
		"@adbayb/ts-config": "0.7.0",
		"eslint": "8.3.0",
		"lerna": "4.0.0",
		"prettier": "2.4.1",
		"typescript": "4.5.2"
	}
}
